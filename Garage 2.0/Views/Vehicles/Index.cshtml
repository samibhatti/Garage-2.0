@model Garage_2._0.Models.ViewModels.VehicleIndexViewModel

@{
    ViewBag.Title = "Garage Index";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
        <input type="search" class="form-control text-box single-line"  placeholder="Regnr, Fabricate, Model, ParkingLot" name="searchTerm" />
        <input type="submit" class="btn btn-default" value="Search" />
        <input type="button" class="btn btn-default" value="Cancel Search" onclick="location.href='@Url.Action("Index")'" />
}
<br />
        <input type="button" class="btn btn-default" value="Check-In" onclick="location.href='@Url.Action("Create")'" />

        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.RegNr).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.RegNr).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.Fabricate).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.Fabricate).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.Model).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.Model).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.ParkingLotNo).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.ParkingLotNo).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.ParkingStartTime).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.ParkingStartTime).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.Duration).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.Duration).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>



                <th></th>
            </tr>

            @foreach (var item in Model.Vehicles)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegNr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fabricate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingLotNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingStartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Check-Out", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
