@model IEnumerable<Garage_2._0.Models.ViewModels.VehicleIndexViewModel>

@{
    ViewBag.Title = "Garage Index";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
        <input type="search" class="form-control text-box single-line" value="@ViewBag.SearchTerm"  placeholder="Regnr, Brand, Modell, ParkingLot" name="searchTerm" />
        <input type="submit" class="btn btn-default" value="Search" />
        <input type="button" class="btn btn-default" value="Cancel Search" onclick="location.href='@Url.Action("Index")'" />
}
<br />
        <input type="button" class="btn btn-default" value="Check-In" onclick="location.href='@Url.Action("Create")'" />

        <table class="table">
            <tr>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.MemberId).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.MemberId).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.MemberFullName).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.MemberFullName).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.RegNr).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.RegNr).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.VehicleTypeName).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.VehicleTypeName).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(m => m.ParkingLotNumber).ToString(), "Index", new { orderBy = Html.DisplayNameFor(m => m.ParkingLotNumber).ToString(), searchTerm = ViewBag.SearchTerm })
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MemberId)</td>
                    <td>@Html.DisplayFor(modelItem => item.MemberFullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.RegNr)</td>
                    <td>@Html.DisplayFor(modelItem => item.VehicleTypeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParkingLotNumber)</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Check-Out", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
